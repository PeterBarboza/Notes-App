{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/index.ts",
    "dev:DEBUG": "DEBUG=api:main ts-node-dev --respawn --transpile-only --ignore-watch node_modules --no-notify ./src/index.ts",
    "start": "node ./dist/index.js",
    "build": "tsc",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:create": "yarn run typeorm migration:create -d ./src/infrastructure/repositories/typeorm/dataSource.ts",
    "migration:generate": "yarn run typeorm migration:generate -d ./src/infrastructure/repositories/typeorm/dataSource.ts",
    "migration:up": "yarn run typeorm migration:run -d ./src/infrastructure/repositories/typeorm/dataSource.ts",
    "migration:revert": "yarn run typeorm migration:revert -d ./src/infrastructure/repositories/typeorm/dataSource.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.11",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.17",
    "@types/uuid": "^9.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
